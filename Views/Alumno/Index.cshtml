@model IEnumerable<CRUDMvcAspAlumnos.Models.AlumnModel>

@{
    ViewBag.Title = "Lista de Alumnos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Agregar")
</p>
<table class="table">
    <tr>
        <th>
            Nombre completo
        </th>
        
        <th>
            Edad
        </th>
        
        <th>
            sexo
        </th>
        <th>
            Ciudad
        </th>        
        <th>
            Fecha Alta
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCompleto)
        </td>
               
        <td>
            @Html.DisplayFor(modelItem => item.Edad)
        </td>
        <td>
            @{
                if (item.Sexo == "M")
                {
                   <span>Masculino</span>
                }
                else 
                { 
                   <span>Femenino</span>
                }
            }

        </td>
        <td>
            @item.NombreCiudad
        </td>
        <td>
            @item.FechaRegistro.ToShortDateString()
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Detalles", new { id=item.Id }) |
            @Html.ActionLink("Borrar", "Eliminar", new { id=item.Id }, new {@class="aElimina"})
        </td>
    </tr>
}

</table>

@section scripts{
    <script>
        $(".aElimina").click(function (event) {
            if (!confirm('Esta seguro que desea eliminar')) {
                event.preventDefault();
            }
        });
    </script>
    
}
